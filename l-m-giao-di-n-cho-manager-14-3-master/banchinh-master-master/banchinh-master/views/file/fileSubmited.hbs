    <form class="mt-4 ml-3" action="/file/upload" method="POST" enctype="multipart/form-data">
        <div class="form-group" style="margin-left: 10px;">
            <label for="exampleFormControlFile1">Files input</label>
            <input type="file" class="form-control-file" name="filePath" id="filePath" required>
            <input class="form-control-file" type="submit" value="upload file">
        </div>
    </form>

   

    <table class="table table-striped mt-4">
    <thead>
        <tr>
            <th scope="col" style="font-size:20px;">File summited:</th>
        </tr>
    </thead>
    {{#each data}}
    
    <tbody>
        <tr>
        <th>
            <a href="/download/{{_id}}">{{nameFile}}</a>
        </th>
        </tr>
    </tbody>
        {{/each}}

    </table>

